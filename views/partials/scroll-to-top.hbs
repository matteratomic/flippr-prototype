<style>
	.f-back-to-top{
		box-shadow: 0 0 10px black;
		position:fixed;
		bottom:10px;
		right:10px;
		width:50px;
		height:50px;
		border-radius:50px;
		background-color:#fda800;
		display:flex;
		align-items:center;
		justify-content: center;
		transform:scale(0);
		transition-property:scale;
		transition-duration:1s;
		animation-name:fade-in;
		animation-duration:1s;
		animation-delay: 1s;
		animation-fill-mode:forwards;
	}
	.f-back-to-top:active{
		transform:scale(1.05);
	}

	@keyframes fade-in{
		0%{
			transform:scale(0);
		}
		100%{
			transform:scale(1);
		}
	}

</style>

<div class="f-back-to-top">
	<i style="color:black" class="fa fa-arrow-up"></i>
</div>
<script type="text/javascript">
	let backToTop = document.querySelector('.f-back-to-top')
	backToTop.onclick = function(){
		window.scrollTo({top:0,left:0,behavior:'smooth'})
	}
</script>