<style>
	.flip-card-wrapper{
		width:330px;
		height:400px;
		perspective:1000px;
		margin:10px 0 10px 0!important;
	}
	.flip-card-inner{
		position:relative;
		width:100%;
		height:100%;
		transition-property:transform;
		transform-style:preserve-3d;
		transition-duration:1.5s;
		transition-delay:0.1s;
		transition-timing-function:cubic-bezier(0.18, 0.89, 0.34, 1.13)
	}
	
	.flip{
		transform:rotateY(180deg);
	}

	.flip-card{
		display:flex;
		flex-direction:column;
		align-items:center;
		justify-content:center;
		padding:10px;
		box-shadow: 0 0 10px black;
		backface-visibility:hidden;
		background-size:cover;
		background-position:center;
		background-repeat: no-repeat;
		border-radius:20px;
		position:absolute;
		top:0;
		left:0;
		width:100%;
		height:100%;
		cursor:pointer;
		user-select: none;
		animation-name:fade-in;
		animation-duration:1s;
	}
	@keyframes fade-in{
		0%{
			transform:scale(0);
		}
		100%{
			transform:scale(1);
		}
	}
	.flip-card-back{
		transform:rotateY(180deg);
		background-color:#ffcc00;
		color:black
	}
	.flip-card-front{
		background-color:#eee;
		color:white;
	}
	.flip-card-front > *{
		color:inherit;
	}
	

</style>
<!-- flipcards -->
<div class="flip-card-wrapper">
	<div class="flip-card-inner">
		<div class="flip-card flip-card-back">
			<h3>{{title}}</h3>
			<p class="lead">{{subtitle}}</p>
		</div>
		<div style="background-image:url('{{url}}')" class="flip-card flip-card-front">
			<h2>{{title}}</h2>
			<p class="lead">{{subtitle}}</p>
		</div>
	</div>
</div>


